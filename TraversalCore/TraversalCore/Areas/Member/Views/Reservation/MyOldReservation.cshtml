@model List<Reservation>
@{
    ViewData["Title"] = "MyApprovalReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Geçmiş Rezervasyonlar</h1>

@if (Model.Count() <= 0)
{
    <h4>Herhangi bir 'Geçmiş Rezervasyonunuz' bulunmamaktadır.</h4>
    <div class="align-items-center">
        <h6>Yeni Rotalarımızı Görmek İstiyorsanız <a href="/Member/Destination/Index/" class="badge bg-secondary">Tıklayın</a> </h6>
    </div>
}
else
{

    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Lokasyon</th>
            <th>Kişi Sayısı</th>
            <th>Tarih</th>
            <th>Açıklama</th>
            <th>Durum</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservationId</td>
                <td>@item.Destination.City</td>
                <td>@item.PersonCount</td>
                <td>@item.ReservationDate</td>
                <td>@item.Description</td>
                <td class="bg-secondary text-light">@item.Status</td>
            </tr>
        }

    </table>
}
