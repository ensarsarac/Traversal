
@model List<Destination>

<div class="col-12 mt-4">
    <div class="card mb-4">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-1">Son Rotalar</h6>
            <p class="text-sm">En son eklenen seyahat rotaları</p>
        </div>
        <div class="card-body p-3">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card card-blog card-plain">
                            <div class="position-relative">
                                <a class="d-block shadow-xl border-radius-xl">
                                    <img src="@item.CoverImage" alt="img-blur-shadow" style="height:250px;" class="w-100 img-fluid shadow border-radius-xl">
                                </a>
                            </div>
                            <div class="card-body px-1 pb-0">
                                <p class="text-gradient text-dark mb-2 text-sm">@item.DayNight - @item.Price ₺  </p><span class="ms-auto">@item.Date.ToString("dd-MMM-yyyy")</span>
                                <a href="javascript:;">
                                    <h5>
                                        @item.City
                                    </h5>
                                </a>
                                @if (item.Details1.Length < 170)
                                {
                                    <p class="mb-4 text-sm">
                                        @item.Details1
                                    </p>
                                }
                                else
                                {
                                    <p class="mb-4 text-sm">
                                        @item.Details1.Substring(0, 170) ...
                                    </p>
                                }
                                <div class="d-flex align-items-center justify-content-between">
                                    <a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-outline-primary btn-sm mb-0">Detayları Gör</a>
                                    <div class="avatar-group mt-2">
                                        <a href="javascript:;" class="avatar avatar-lg rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.Guide.Name">
                                            <img alt="Image placeholder" src="~/GuideImage/@item.Guide.Image">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }



                <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                    <div class="card h-100 card-plain border">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <a href="/Member/Reservation/NewReservation">
                                <i class="fa fa-plus text-secondary mb-3"></i>
                                <h5 class=" text-secondary"> Yeni Rezervasyon Oluştur </h5>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>