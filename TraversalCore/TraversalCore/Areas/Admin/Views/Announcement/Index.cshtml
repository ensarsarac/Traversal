@using TraversalCore.Areas.Admin.Models
@model List<AnnouncementListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Listesi</h1>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Detaylar</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.AnnouncementId</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementId/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementId/" class="btn btn-outline-warning">Güncelle</a></td>

        </tr>
    }

</table>
<a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-primary">Yeni Duyuru Ekle</a>
