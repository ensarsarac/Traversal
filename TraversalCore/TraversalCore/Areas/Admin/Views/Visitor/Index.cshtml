@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Ülke</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.VisitorID</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Mail</td>
            <td><a href="/Admin/Visitor/DeleteVisitor/@item.VisitorID/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Visitor/UpdateVisitor/@item.VisitorID/" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Admin/Visitor/AddVisitor/" class="btn btn-outline-primary">Yeni Ziyaretçi Girişi</a>