
@model DTOLayer.DestinatonDTOs.DestinationAddDTO

@{
    ViewData["Title"] = "AddDestination2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>DTO ile ekleme</h1>
<hr />

<form method="post">

    <div class="form-group">
        @Html.Label("Şehir")
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.City, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Gün / Gece")
        @Html.TextBoxFor(x => x.DayNight, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.DayNight, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Fiyat")
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Price, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Kapasite")
        @Html.TextBoxFor(x => x.Capacity, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Capacity, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>

</form>
