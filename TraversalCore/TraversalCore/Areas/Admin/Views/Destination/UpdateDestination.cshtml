@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Güncelle</h1>


<form method="post">
    <input type="hidden"  asp-for="DestinationId"/>
    <div class="form-group">
        <label class="form-label" asp-for="City">Şehir</label>
        <input class="form-control" asp-for="City" />
    </div>


    <div class="form-group mb-3">
        <label class="form-label" asp-for="DayNight">Gün Gece</label>
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Price">Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Image">Ana Görsel</label>
        <input type="text" asp-for="Image" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Capacity">Kapasite</label>
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="CoverImage">Kapak Görsel</label>
        <input type="text" asp-for="CoverImage" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Image2">Görsel 2</label>
        <input type="text" asp-for="Image2" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Description">Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Details1">Detay 1</label>
        <textarea type="text" asp-for="Details1" cols="30" rows="5" class="form-control"></textarea>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Details2">Detay 2</label>
        <textarea type="text" asp-for="Details2" cols="30" rows="5" class="form-control"></textarea>
    </div>



    <button type="submit" class="btn btn-warning">Güncelle</button>
</form>