
@model GuideAddViewModel

@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    span{
        color:red;
    }
</style>

<h1>Rehber Ekle</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label class="form-label" asp-for="NameSurname">Ad Soyad</label>
        <input class="form-control" asp-for="NameSurname" />
        <span asp-validation-for="@Model.NameSurname"></span>

    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="TwitterUrl">Twitter</label>
        <input class="form-control" asp-for="TwitterUrl" />
        <span asp-validation-for="@Model.TwitterUrl"></span>

    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="InstagramUrl">Instagram</label>
        <input class="form-control" asp-for="InstagramUrl" />
        <span asp-validation-for="@Model.InstagramUrl"></span>

    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Description">Açıklama</label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="@Model.Description"></span>

    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Image">Resim</label>
        <input class="form-control" type="file" asp-for="Image" />
        <span asp-validation-for="@Model.Image"></span>

    </div>

    <button type="submit" class="btn btn-primary">Rehber Ekle</button>
</form>
