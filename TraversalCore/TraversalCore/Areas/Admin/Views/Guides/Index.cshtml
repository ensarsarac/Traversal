@using EntityLayer.Concrete
@model List<Guide>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Rehberler</h1>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Durum Değiştir</th>
        <th>Sil</th>
        <th>Güncelle</th>

        @*<th>Sil</th>
        <th>Düzenle</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>*@

    </tr>

    @foreach (var item in Model)
    {

<tr>
    @{
        sayac = sayac + 1;
    }
    <td>@sayac</td>
    <td><img src="~/GuideImage/@item.Image" class="img-thumbnail rounded-pill" style="width:100px; height:100px;" /></td>
    <td>@item.Name</td>
    <td>@item.Description</td>
    @{
        if (item.Status)
        {


            <td class="text-success">Aktif</td>
        }
        else
        {
            <td class="text-danger">Aktif</td>

        }
    }
    @{
        if (item.Status)
        {
            <td><a href="/Admin/Guides/DoNotActive/@item.GuideId" class="btn btn-outline-danger">Pasif Yap</a></td>
        }
        else
        {
            <td><a href="/Admin/Guides/DoActive/@item.GuideId" class="btn btn-outline-success">Aktif Yap</a></td>
        }
    }
    <td><a href="/Admin/Guides/DeleteGuides/@item.GuideId" class="btn btn-danger">Rehber Sil</a></td>
    <td><a href="/Admin/Guides/UpdateGuides/@item.GuideId" class="btn btn-info">Rehber Güncelle</a></td>


    @*<td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-outline-danger">Sil</a></td>
        <td><a href="/Admin/User/UpdateUser/@item.Id" class="btn btn-outline-warning">Düzenle</a></td>
        <td><a href="/Admin/User/CommentUser/@item.Id" class="btn btn-outline-info">Yorumlar</a></td>
        <td><a href="/Admin/User/ReservationUser/@item.Id" class="btn btn-outline-secondary">Tur Geçmişi</a></td>*@

</tr>
    }


</table>
<a href="/Admin/Guides/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Ekle</a>
