
@model GuideAddViewModel

@{
    ViewData["Title"] = "UpdateGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Güncelle</h1>


<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label class="form-label" asp-for="NameSurname">Ad Soyad</label>
        <input class="form-control" asp-for="NameSurname" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="TwitterUrl">Twitter</label>
        <input class="form-control" asp-for="TwitterUrl" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="InstagramUrl">Instagram</label>
        <input class="form-control" asp-for="InstagramUrl" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Description">Açıklama</label>
        <input class="form-control" asp-for="Description" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Image">Resim</label>
        <input class="form-control" type="file" asp-for="Image" />
    </div>

    <button type="submit" class="btn btn-primary">Rehber Güncelle</button>
</form>

